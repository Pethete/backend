<div><h1>Productos</h1>
  <div class="row row-cols-3 g-3">
    {{#each productos}}
      <div class="col">
        <div class="card">
          <img
            src="{{this.image}}"
            class="card-img-top"
            alt="{{this.description}}"
          />
          <div class="card-body">
            <h5 class="card-title"> {{this.name}} </h5>
            <p class="card-text">
              {{this.description}}.
            </p>
            <p class="card-text">
              {{this.price}}.
            </p>
            <a href="#" class="btn btn-primary">Agregar al Carrito</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>